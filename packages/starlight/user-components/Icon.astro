---
import { Icon as AstroIcon } from 'astro-icon/components';
import { Icons, isBuiltInIcon, type StarlightIcon } from '../utils/icons';

// TODO(HiDeoo) global astro-icon options?
// TODO(HiDeoo) Can we support icons from `src/icons/` in a remark plugin?

// TODO(HiDeoo) Review all props
interface Props {
	// TODO(HiDeoo) improve type to support string but keep autocomplete
	// TODO(HiDeoo) It should not be done here but in the `StarlightIcon` type itself so it's reflected everywhere
	name: StarlightIcon;
	label?: string;
	color?: string;
	size?: string;
	class?: string;
}

const { name, label, size = '1em', color } = Astro.props;
const a11yAttrs = label ? ({ 'aria-label': label } as const) : ({ 'aria-hidden': 'true' } as const);
---

{
	isBuiltInIcon(name) ? (
		<svg
			{...a11yAttrs}
			class={Astro.props.class}
			width="16"
			height="16"
			viewBox="0 0 24 24"
			fill="currentColor"
			set:html={Icons[name]}
		/>
	) : (
		<AstroIcon
			{...a11yAttrs}
			class={Astro.props.class}
			{name}
			style={`${color ? `--sl-icon-color: ${color};` : ''}--sl-icon-size: ${size};`}
		/>
	)
}

<style define:vars={{ 'sl-icon-color': color, 'sl-icon-size': size }}>
	svg {
		color: var(--sl-icon-color);
		font-size: var(--sl-icon-size, 1em);
		width: 1em;
		height: 1em;
	}
</style>
